CREATE TABLE IF NOT EXISTS Usuarios (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre_usuario TEXT UNIQUE NOT NULL,
    hash_contrasena TEXT NOT NULL,
    fecha_creacion DATETIME DEFAULT CURRENT_TIMESTAMP
);

-- Tabla para registrar cada sesión de un usuario
CREATE TABLE IF NOT EXISTS Sesiones (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    usuario_id INTEGER NOT NULL,
    inicio_sesion DATETIME DEFAULT CURRENT_TIMESTAMP,
    fin_sesion DATETIME, -- Se llena cuando el usuario cierra sesión
    FOREIGN KEY (usuario_id) REFERENCES Usuarios (id)
);

-- Tabla para cada evento de detección
CREATE TABLE IF NOT EXISTS EventosDeteccion (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    sesion_id INTEGER NOT NULL, -- Vincula el evento a la sesión activa
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,
    id_camara TEXT, -- Por si tienes varias cámaras (ej: 'camara_norte', 'camara_1')
    confianza REAL, -- Nivel de confianza del modelo (ej: 0.95)
    bounding_box TEXT, -- Coordenadas (ej: '{&quot;x&quot;: 100, &quot;y&quot;: 150, &quot;w&quot;: 50, &quot;h&quot;: 30}')
    ruta_captura TEXT, -- Ruta a la imagen/video guardado del evento
    FOREIGN KEY (sesion_id) REFERENCES Sesiones (id)
);</sql><current_tab id="0"/></tab_sql></sqlb_project>
